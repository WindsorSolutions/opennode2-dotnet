<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema xmlns:bch="http://www.exchangenetwork.net/schema/BEACHES/2" xmlns:xsd="http://www.w3.org/2001/XMLSchema" targetNamespace="http://www.exchangenetwork.net/schema/BEACHES/2" elementFormDefault="qualified" attributeFormDefault="unqualified" version="2.2">
	<xsd:annotation>
		<xsd:documentation>
			Schema Name: Activity Detail v2.2
			Current Version Available At: http://www.exchangenetwork.net/exchanges/water/beach_notif.htm 
			Description: Schema used to describe all information about an activity.
			Application: PRAWN
			Developed by: EPA ORD/OW  and CGI Federal
			Point of Contact: eBeaches@cgifederal.com
			Change History: 
					20051208 - Initial Creation of Notification Schema v1.2
					20061108 - Revised to follow EPA/Exchange Network Guidelines
					20070821 - Revised to upgrade to version 2.0 of the schema
					20080825 - Revised to upgrade to version 2.1 of the schema
					20111003 - Revised to upgrade to version 2.2 of the schema
		</xsd:documentation>
	</xsd:annotation>
	<xsd:include schemaLocation="BEACHES_Shared_v2.2.xsd"/>
	<xsd:complexType name="ActivityDataType">
		<xsd:sequence>
			<xsd:element ref="bch:ActivityTypeCode"/>
			<xsd:element ref="bch:ActivityName"/>
			<xsd:element ref="bch:ActivityActualStartDate"/>
			<xsd:element ref="bch:ActivityActualStopDate"/>
			<xsd:element ref="bch:ActivityReasonDetail" maxOccurs="unbounded"/>
			<xsd:element ref="bch:ActivitySourceDetail" maxOccurs="unbounded"/>
			<xsd:element ref="bch:ActivityIndicatorDetail" maxOccurs="unbounded"/>
			<xsd:element ref="bch:ActivityMonitoringStationIdentifier" minOccurs="0" maxOccurs="unbounded"/>
			<xsd:element ref="bch:ActivityDescriptionText" minOccurs="0"/>
			<xsd:element ref="bch:ActivityCommentText" minOccurs="0"/>
			<xsd:element ref="bch:ActivityExtentDetail" minOccurs="0"/>
		</xsd:sequence>
	</xsd:complexType>
	<xsd:element name="BeachActivityDetail" type="bch:ActivityDataType">
		<xsd:annotation>
			<xsd:documentation>All the information associated with an activity.</xsd:documentation>
		</xsd:annotation>
	</xsd:element>
</xsd:schema>
