<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<bean name="/flow.htm"
		class="com.windsor.node.admin.flow.FlowController">
		<property name="flowService" ref="flowService" />
	</bean>

	<bean name="/flow-edit.htm"
		class="com.windsor.node.admin.flow.EditFlowController">
		<property name="accountService" ref="accountService" />
		<property name="flowService" ref="flowService" />
		<property name="validator">
			<bean class="com.windsor.node.admin.valid.FlowValidator">
                <property name="flowService" ref="flowService" />
            </bean>
		</property>
		<property name="successView" value="flow.htm" />
	</bean>

	<bean name="/service-edit.htm"
		class="com.windsor.node.admin.flow.EditServiceController">
		<property name="configService" ref="configService" />
		<property name="flowService" ref="flowService" />
		<property name="validator">
			<bean class="com.windsor.node.admin.valid.ServiceValidator">
				<property name="flowService" ref="flowService" />
			</bean>
		</property>
		<property name="successView" value="flow.htm" />
	</bean>


	<bean name="/plugin-upload.htm"
		class="com.windsor.node.admin.flow.PluginUploadController">
		<property name="flowService" ref="flowService" />
		<property name="pluginAdminService" ref="pluginAdminService" />
        <property name="formView" value="plugin-upload" />
        <property name="successView" value="redirect:flow.htm" />
	</bean>



</beans>