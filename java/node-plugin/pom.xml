        <profile>
            <id>icisnpdes40</id>
            <properties>
                <plugin.name>icisnpdes40</plugin.name>
                <plugin.subbuild.number>00</plugin.subbuild.number>
            </properties>
            <build>
                <finalName>${plugin.name}</finalName>
                <plugins>
                    <plugin>
                        <groupId>org.jvnet.hyperjaxb3</groupId>
                        <artifactId>maven-hyperjaxb3-plugin</artifactId>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>generate</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                        	<debug>true</debug>
                            <variant>jpa2</variant>
                            <extension>true</extension>
                            <bindingDirectory>${basedir}/src/main/packaging/icisnpdes40/bindings</bindingDirectory>
                            <roundtripTestClassName>RoundtripTest</roundtripTestClassName>
                            <schemaDirectory>${basedir}/src/main/packaging/icisnpdes40/xsd</schemaDirectory>
                            <generatePackage>com.windsor.node.plugin.icisnpdes40.generated</generatePackage>
                        </configuration>
                        <dependencies>
                        	<dependency>
                        		<groupId>com.windsor.node</groupId>
                        		<artifactId>node-hyperjaxb3-naming</artifactId>
                        		<version>2.06-SNAPSHOT</version>
                        	</dependency>
                        </dependencies>
                    </plugin>
                </plugins>
            </build>
        </profile>
