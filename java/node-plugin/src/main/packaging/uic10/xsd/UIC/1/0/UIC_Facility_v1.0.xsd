<?xml version="1.0" encoding="utf-8"?>
<xsd:schema xmlns:uic="http://www.exchangenetwork.net/schema/uic/1" xmlns:xsd="http://www.w3.org/2001/XMLSchema" targetNamespace="http://www.exchangenetwork.net/schema/uic/1" elementFormDefault="qualified" attributeFormDefault="unqualified" version="1.0">
	<xsd:include schemaLocation="UIC_SimpleContent_v1.0.xsd"/>
	<xsd:annotation>
		<xsd:documentation>
        Schema Name  : UIC_Facility_v1.0.xsd
        Description   : basic identification information for a regulated UIC facility (e.g. well field, etc. ) .
        Developed by  : 	 Lockheed Martin
        Point of Contact :   Lockheed Martin
</xsd:documentation>
	</xsd:annotation>
	<xsd:complexType name="FacilityDetailType">
		<xsd:annotation>
			<xsd:documentation>Defines the Facility information structure.</xsd:documentation>
		</xsd:annotation>
		<xsd:sequence>
			<xsd:element ref="uic:FacilityIdentifier"/>
			<xsd:element ref="uic:LocalityName" minOccurs="0">
				<xsd:annotation>
					<xsd:documentation>The name of the city, town, or village where the facility is located</xsd:documentation>
				</xsd:annotation>
			</xsd:element>
			<xsd:element ref="uic:FacilitySiteName"/>
			<xsd:element ref="uic:FacilityPetitionStatusCode" minOccurs="0"/>
			<xsd:element ref="uic:LocationAddressStateCode" minOccurs="0"/>
			<xsd:element ref="uic:FacilityStateIdentifier"/>
			<xsd:element ref="uic:LocationAddressText"/>
			<xsd:element ref="uic:FacilitySiteTypeCode" minOccurs="0"/>
			<xsd:element ref="uic:NAICSCode" minOccurs="0"/>
			<xsd:element ref="uic:SICCode" minOccurs="0"/>
			<xsd:element ref="uic:LocationAddressPostalCode"/>
		</xsd:sequence>
	</xsd:complexType>
	<xsd:element name="FacilityDetail" type="uic:FacilityDetailType"/>
</xsd:schema>
