<?xml version="1.0" encoding="UTF-8"?>
<project name="Here_Plugin" basedir="." default="build.zip">

	<property file="build.properties" />
	<import file="../plugin.build.xml" />

    <!-- this target must exist, even if it's empty -->
    <target name="do.plugin.specifics">
        <mkdir dir="${dist}/${plugin.dir}" />
        <copy todir="${dist}/${plugin.dir}" verbose="${verbosity}" preservelastmodified="false">
            <fileset dir="${plugin.resource.dir}/templates" includes="*.vm" />
        </copy>
    </target>

</project>
