<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">
    <id>inner-bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${dist.resources.basedir}/plugins</directory>
            <outputDirectory>./</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${dist.resources.overlay.dir}</directory>
            <outputDirectory>./</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <!-- 
        <file>
            <outputDirectory>applications</outputDirectory>
            <source>../node-app-wna/target/wna.war</source>
        </file>
         -->
        <file>
            <outputDirectory>applications</outputDirectory>
            <source>../node-app-wne/target/wne.war</source>
        </file>
        <file>
            <outputDirectory>applications</outputDirectory>
            <source>../node-app-wne2/target/wne2.war</source>
        </file>
        <file>
            <outputDirectory>applications</outputDirectory>
            <source>../node-app-wnos/target/wnos.war</source>
        </file>
        <file>
            <outputDirectory>applications</outputDirectory>
            <source>../node-app-wnrest/target/wnrest.war</source>
        </file>
        <file>
            <outputDirectory>applications</outputDirectory>
            <source>../../node-ng/node-web/target/node-web.war</source>
            <destName>wna.war</destName>
        </file>
    </files>
</assembly>