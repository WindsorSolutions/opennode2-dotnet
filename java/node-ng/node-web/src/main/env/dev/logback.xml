<configuration debug="false">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%date{ISO8601} [%thread] [%level] [%X{user}] %logger{5} - %message%n</pattern>
        </encoder>
    </appender>

    <logger name="org.apache.wicket" level="INFO"/>

    <logger name="org.springframework.security" level="WARN"/>

    <logger name="com.windsor" level="DEBUG"/>
    <logger name="com.windsor.node" level="DEBUG"/>
    <logger name="org.apache.axis" level="INFO"/>
    <!-- <logger name="org.hibernate" level="DEBUG"/>-->

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>