<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">
    <id>inner-bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>../resources/database</directory>
            <outputDirectory>database</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../resources/other/documentation</directory>
            <outputDirectory>documentation</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../resources/opennode2_home</directory>
            <outputDirectory>opennode2_home</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../${resources.project}/conf/${build.profile}</directory>
            <outputDirectory>opennode2_home/conf</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <outputDirectory>applications</outputDirectory>
            <source>../node-admin/target/wna.war</source>
        </file>
        <file>
            <outputDirectory>applications</outputDirectory>
            <source>../node-endpoint/target/wne.war</source>
        </file>
        <file>
            <outputDirectory>applications</outputDirectory>
            <source>../node-endpoint2/target/wne2.war</source>
        </file>
        <file>
            <outputDirectory>applications</outputDirectory>
            <source>../node-wnos/target/wnos.war</source>
        </file>
    </files>
